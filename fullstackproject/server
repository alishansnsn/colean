const express = require('express'); // updated // updated
const path = require('path'); // updated
const app = express(); // updated // updated // updated // updated // updated
const port = 3000; // updated
// minor change added // updated // updated
// Middleware to parse JSON bodies // updated // updated
app.use(express.json()); // updated
// minor change added
// Serve static files from the 'public' directory
app.use(express.static(path.join(__dirname, 'public'))); // updated
// minor change added // updated // updated // updated
// API Endpoint // updated // updated
app.post('/api/data', (req, res) => { // updated
    const { message } = req.body; // updated
    console.log(`Received data from client: "${message}"`);
    
    // Send a response back to the client // updated
    res.json({
        serverResponse: `Got your message: "${message}". Thanks!` // updated
    }); // updated
});

app.listen(port, () => {
    console.log(`Server is running at http://localhost:${port}`);
}); // updated // updated
